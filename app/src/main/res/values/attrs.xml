<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToolTipView">
        <attr name="direction" format="enum">
            <enum name="Top" value="0"/>
            <enum name="Bottom" value="1"/>
            <enum name="Left" value="2"/>
            <enum name="Right" value="3"/>
        </attr>
        <attr name="tooltipText" format="string"/>
        <attr name="tooltipTextSize" format="dimension"/>
        <attr name="tooltipTextColor" format="color"/>
        <attr name="tooltipPadding" format="dimension"/>
        <attr name="tooltipHeadRatio" format="float"/>
        <attr name="tooltipColor" format="color"/>
        <attr name="tooltipHeadWidth" format="dimension"/>
        <attr name="tooltipHeadHeight" format="dimension"/>
        <attr name="tooltipMaxWidth" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="TimerTooltip">
        <attr name="timerSecond" format="integer"/>
    </declare-styleable>
</resources>